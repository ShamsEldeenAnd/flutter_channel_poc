<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity">

    <TextView
        android:id="@+id/freeTrail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Here is free trail"
        android:textSize="24sp"
        android:layout_centerInParent="true"
        android:layout_centerVertical="true"
        />

    <TextView
        android:id="@+id/bookUrl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="https://12346"
        android:textSize="24sp"
        android:autoLink="all"
        android:linksClickable="true"
        android:textColorLink="#3F51B5"
        android:layout_centerInParent="true"
        android:layout_centerVertical="true"
        android:layout_below="@id/freeTrail"
        />

    <Button
        android:id="@+id/purchaseBook"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Purchase Book"
        android:textSize="24sp"
        android:textAllCaps="false"
        android:padding="20dp"
        android:layout_centerInParent="true"
        android:layout_centerVertical="true"
        android:layout_below="@id/bookUrl"
        />

</RelativeLayout>